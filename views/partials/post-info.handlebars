<post class="media">
    <figure class="media-left">
        <p class="image is-128x128">
            <img id="post-pic"
                src="https://nomorsiapa.com/images/v/th/id/OIP.qpt2eFvQWlaI5SlyN8RO1QHaFf?w=241&h=180&c=7&r=0&o=5&pid=1.7">
        </p>
    </figure>
    <div class="media-content">
        <div class="content">
            <p>
                <strong>{{user.username}}</strong> <small>@poster</small> <small>{{format_date created_at}}</small>
                <br>
            <p>{{post_text}}</p>
            </p>
        </div>
    </div>
</post>

{{#if loggedIn}}
<comment class="media">
    <figure class="media-left">
        <p class="image is-128x128">
            <img id= 'post-pic'src="">
        </p>
    </figure>
    <div class="media-content">
        <form class="control">
            <textarea class="textarea" placeholder="Add a comment"></textarea>
        </form>
        <nav class="level">
            <button class="button is-info">Submit</button>
        </nav>
    </div>
</comment>
{{/if}}

<script src="/public/js/comment-post.js"></script>