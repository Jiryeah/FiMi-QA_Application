<ol class="post-list">
    {{#each post as |post|}}
    <li>
        {{> post-info post }}
    </li>
    {{/each}}
</ol>

{{#if loggedIn}}
<comment class="media">
    <figure class="media-left">
        <p class="image is-128x128">
            <img id="comment-pic" src="" />
        </p>
    </figure>
    <div class="media-content">
        <form class="control">
            <textarea class="textarea" placeholder="Add a comment"></textarea>
        </form>
        <nav class="level">
            <button class="button is-info">Submit</button>
        </nav>
    </div>
</comment>
{{/if}}

<script src="../javascript/comment-post.js"></script>